{
    "manifest_version": 2,
    "name": "Translator",
    "description": "Add a context menu option to selections to translate the selection.",
    "version": "1.0",
    "homepage_url": "https://github.com/gemorroj/translator",

    "applications": {
        "gecko": {
            "strict_min_version": "56.0a1"
        }
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "icons": {
        "16": "favicon.png",
        "32": "favicon.png",
        "48": "favicon.png"
    },

    "permissions": [
        "notifications",
        "contextMenus"
    ]
}
